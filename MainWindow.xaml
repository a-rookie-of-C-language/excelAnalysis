<Window x:Class="excel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:excel.mvvm.viewModels"
        xmlns:views="clr-namespace:excel.mvvm.views"
        mc:Ignorable="d"
        Icon="image/image.png"
        Title="学生成绩分析系统" Height="600" Width="1000" MinWidth="900" MinHeight="540"
        >
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 侧边栏 -->
        <views:SidebarView Grid.Column="0" DataContext="{Binding}"/>
        
        <!-- 主内容区域 -->
        <Border Grid.Column="1" 
                Background="White" 
                Margin="16" 
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Gray" 
                                 Direction="315" 
                                 ShadowDepth="5" 
                                 Opacity="0.3" 
                                 BlurRadius="10"/>
            </Border.Effect>
            <ContentPresenter Content="{Binding SelectedItem.View}" 
                             Margin="24"/>
        </Border>
    </Grid>
</Window>
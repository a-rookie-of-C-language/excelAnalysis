<UserControl x:Class="excel.mvvm.views.StudentGradeAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 页面标题 -->
        <Border Grid.Row="0" 
                Background="#FAFAFA" 
                BorderBrush="#E8E8E8" 
                BorderThickness="0,0,0,1" 
                Padding="0,20">
            <StackPanel>
                <TextBlock Text="学生成绩分析" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#333333" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="分析学生成绩分布、趋势和统计信息" 
                          FontSize="14" 
                          Foreground="#666666" 
                          HorizontalAlignment="Center" 
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="20">
            <StackPanel>
                
                <!-- 统计卡片区域 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 总人数卡片 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="总人数" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="1,234" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#1890FF" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 平均分卡片 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="平均分" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="78.5" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#52C41A" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 及格率卡片 -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="及格率" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="85.2%" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#FA8C16" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 优秀率卡片 -->
                    <Border Grid.Column="3" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="优秀率" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="23.8%" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#722ED1" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 图表区域 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 成绩分布图表 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="成绩分布图" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333333" 
                                      Margin="0,0,0,20"/>
                            <Rectangle Height="200" 
                                      Fill="#F0F2F5" 
                                      Stroke="#E8E8E8" 
                                      StrokeDashArray="5,5"/>
                            <TextBlock Text="图表区域 - 可集成第三方图表库" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Foreground="#999999" 
                                      Margin="0,-120,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 等级分布 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="等级分布" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333333" 
                                      Margin="0,0,0,20"/>
                            
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#52C41A" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="优秀 (90-100)" Margin="8,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="294" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#1890FF" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="良好 (80-89)" Margin="8,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="456" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#FA8C16" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="中等 (70-79)" Margin="8,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="321" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#FF4D4F" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="不及格 (&lt;60)" Margin="8,0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="163" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 操作按钮区域 -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button Content="导出报告" 
                           Background="#1890FF" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="20,10" 
                           Margin="0,0,8,0"/>
                    <Button Content="打印成绩单" 
                           Background="White" 
                           Foreground="#1890FF" 
                           BorderBrush="#1890FF" 
                           BorderThickness="1" 
                           Padding="20,10" 
                           Margin="8,0"/>
                    <Button Content="发送通知" 
                           Background="White" 
                           Foreground="#52C41A" 
                           BorderBrush="#52C41A" 
                           BorderThickness="1" 
                           Padding="20,10" 
                           Margin="8,0,0,0"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
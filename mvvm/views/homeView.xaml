<UserControl x:Class="excel.mvvm.views.homeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="UploadAreaStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                    <Setter Property="Background" Value="#E8F5E8"/>
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="UploadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="文件上传" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <Border Grid.Row="1" 
                Style="{StaticResource UploadAreaStyle}"
                MinHeight="200"
                AllowDrop="True"
                Drop="UploadArea_Drop"
                DragEnter="UploadArea_DragEnter"
                DragLeave="UploadArea_DragLeave"
                DragOver="UploadArea_DragOver"
                MouseLeftButtonUp="UploadArea_Click">
            
            <Grid>
                <!-- 默认上传界面 -->
                <StackPanel x:Name="DefaultUploadPanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding ShowDefaultPanel, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                    <!-- SVG 上传图标 -->
                    <svgc:SvgViewbox Source="pack://application:,,,/svg/upload.svg" 
                                     Width="64" 
                                     Height="64" 
                                     Margin="0,0,0,20"/>
                    
                    <TextBlock Text="拖拽文件到此处" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="#666666" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="或者" 
                               FontSize="14" 
                               Foreground="#999999" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,15"/>
                    
                    <Button Content="选择文件" 
                            Style="{StaticResource UploadButtonStyle}"
                            Click="SelectFile_Click"/>
                    
                    <TextBlock Text="支持 Excel 文件 (.xlsx, .xls)" 
                               FontSize="12" 
                               Foreground="#999999" 
                               HorizontalAlignment="Center" 
                               Margin="0,15,0,0"/>
                </StackPanel>
                
                <!-- 文件信息显示 -->
                <StackPanel x:Name="FileInfoPanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding ShowFileInfo, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                    <Border Background="#E8F5E8" 
                            BorderBrush="#4CAF50" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="✓ 文件已选择" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#2E7D32" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="{Binding SelectedFileName}" 
                                       FontSize="13" 
                                       Foreground="#333333" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,5"/>
                            
                            <TextBlock Text="{Binding SelectedFileSize}" 
                                       FontSize="12" 
                                       Foreground="#666666" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Margin="0,15,0,0">
                        <Button Content="重新选择" 
                                Style="{StaticResource UploadButtonStyle}"
                                Background="#FF9800"
                                Click="SelectFile_Click"
                                Margin="0,0,10,0"/>
                        
                        <Button Content="开始上传" 
                                Style="{StaticResource UploadButtonStyle}"
                                Background="#4CAF50"
                                Click="StartUpload_Click"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 上传进度 -->
                <StackPanel x:Name="UploadProgressPanel" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding ShowProgress, 
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                    <TextBlock Text="正在上传..." 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="#2196F3" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>
                    
                    <ProgressBar Value="{Binding UploadProgress}" 
                                 Maximum="100" 
                                 Height="8" 
                                 Width="200" 
                                 Background="#E0E0E0" 
                                 Foreground="#2196F3" 
                                 Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{Binding UploadProgressText}" 
                               FontSize="12" 
                               Foreground="#666666" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 状态信息 -->
        <TextBlock Grid.Row="2" 
                   x:Name="StatusText"
                   Text="{Binding StatusMessage}" 
                   FontSize="12" 
                   Foreground="{Binding StatusColor}" 
                   HorizontalAlignment="Center" 
                   Margin="0,15,0,0"
                   Visibility="{Binding ShowStatus, 
                   Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>

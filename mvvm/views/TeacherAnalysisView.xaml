<UserControl x:Class="excel.mvvm.views.TeacherAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 页面标题 -->
        <Border Grid.Row="0" 
                Background="#FAFAFA" 
                BorderBrush="#E8E8E8" 
                BorderThickness="0,0,0,1" 
                Padding="0,20">
            <StackPanel>
                <TextBlock Text="教师教学分析" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#333333" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="分析教师教学效果、课程质量和学生反馈" 
                          FontSize="14" 
                          Foreground="#666666" 
                          HorizontalAlignment="Center" 
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="20">
            <StackPanel>
                
                <!-- 教师概览卡片 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 教师总数 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="教师总数" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="45" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#1890FF" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 课程总数 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="课程总数" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="128" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#52C41A" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 平均评分 -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="平均评分" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="4.2/5.0" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#FA8C16" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 优秀教师 -->
                    <Border Grid.Column="3" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="优秀教师" 
                                      FontSize="14" 
                                      Foreground="#666666"/>
                            <TextBlock Text="12" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      Foreground="#722ED1" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 教师排行榜和课程分析 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 教师排行榜 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="教师评分排行榜" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333333" 
                                      Margin="0,0,0,20"/>
                            
                            <StackPanel>
                                <!-- 排行榜项目 -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                           Background="#FFD700" 
                                           CornerRadius="12" 
                                           Width="24" 
                                           Height="24">
                                        <TextBlock Text="1" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="Bold" 
                                                  Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" 
                                              Text="张教授 - 高等数学" 
                                              Margin="12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                              Text="4.9" 
                                              FontWeight="SemiBold" 
                                              Foreground="#52C41A" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                           Background="#C0C0C0" 
                                           CornerRadius="12" 
                                           Width="24" 
                                           Height="24">
                                        <TextBlock Text="2" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="Bold" 
                                                  Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" 
                                              Text="李老师 - 数据结构" 
                                              Margin="12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                              Text="4.7" 
                                              FontWeight="SemiBold" 
                                              Foreground="#52C41A" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                           Background="#CD7F32" 
                                           CornerRadius="12" 
                                           Width="24" 
                                           Height="24">
                                        <TextBlock Text="3" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="Bold" 
                                                  Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" 
                                              Text="王老师 - 计算机网络" 
                                              Margin="12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                              Text="4.6" 
                                              FontWeight="SemiBold" 
                                              Foreground="#52C41A" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                           Background="#999999" 
                                           CornerRadius="12" 
                                           Width="24" 
                                           Height="24">
                                        <TextBlock Text="4" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="Bold" 
                                                  Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" 
                                              Text="陈老师 - 操作系统" 
                                              Margin="12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                              Text="4.5" 
                                              FontWeight="SemiBold" 
                                              Foreground="#1890FF" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                           Background="#999999" 
                                           CornerRadius="12" 
                                           Width="24" 
                                           Height="24">
                                        <TextBlock Text="5" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="Bold" 
                                                  Foreground="White"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" 
                                              Text="刘老师 - 软件工程" 
                                              Margin="12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                              Text="4.3" 
                                              FontWeight="SemiBold" 
                                              Foreground="#1890FF" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 课程分析图表 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E8E8E8" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="课程评分分布" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333333" 
                                      Margin="0,0,0,20"/>
                            <Rectangle Height="200" 
                                      Fill="#F0F2F5" 
                                      Stroke="#E8E8E8" 
                                      StrokeDashArray="5,5"/>
                            <TextBlock Text="课程评分趋势图" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Foreground="#999999" 
                                      Margin="0,-120,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 操作按钮区域 -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button Content="生成教学报告" 
                           Background="#1890FF" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="20,10" 
                           Margin="0,0,8,0"/>
                    <Button Content="导出数据" 
                           Background="White" 
                           Foreground="#1890FF" 
                           BorderBrush="#1890FF" 
                           BorderThickness="1" 
                           Padding="20,10" 
                           Margin="8,0"/>
                    <Button Content="教师管理" 
                           Background="White" 
                           Foreground="#52C41A" 
                           BorderBrush="#52C41A" 
                           BorderThickness="1" 
                           Padding="20,10" 
                           Margin="8,0,0,0"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
<UserControl x:Class="excel.Views.StudentInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <Grid Background="#FAFAFA" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>
            <TextBox x:Name="SearchBox" Width="240" Height="32" Margin="0,0,8,0" DockPanel.Dock="Left" 
                     materialDesign:HintAssist.Hint="姓名或学号"/>
            <Button Content="查询" Width="80" Height="32"/>
        </DockPanel>

        <DataGrid Grid.Row="2" x:Name="StudentGrid"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  Background="#FFFFFF"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="学号" Binding="{Binding Id}" Width="120"/>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="160"/>
                <DataGridTextColumn Header="班级" Binding="{Binding Class}" Width="120"/>
                <DataGridTextColumn Header="学院" Binding="{Binding College}" Width="160"/>
                <DataGridTextColumn Header="专业" Binding="{Binding Major}" Width="160"/>
                <DataGridTextColumn Header="年级" Binding="{Binding Grade}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>